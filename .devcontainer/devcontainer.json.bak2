{
  "name": "k8s-dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "remoteUser": "root",
  "postCreateCommand": [
    "bash",
    "-c",
    "apt-get update && apt-get install -y git curl && curl -LO https://dl.k8s.io/release/v1.30.0/bin/linux/amd64/kubectl && install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl && kubectl version --client"
  ]
}
